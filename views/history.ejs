  <br>
  <div class="history-header">
    <h1>Search History</h1>
    <% if (history && history.length > 0) { %>
      <form action="/history/clear" method="POST" style="display: inline;">
        <button type="submit" class="btn" onclick="return confirm('Are you sure you want to clear all history?')">
          Clear History
        </button>
      </form>
    <% } %>
  </div>

  <% if (history && history.length > 0) { %>
      <table class="history-table">
        <thead>
          <tr>
            <th>Word</th>
            <th>Date</th>
            <th>Status</th>
          </tr>
        </thead>
        <tbody>
          <% history.forEach(item => { %>
            <tr>
              <td><%= item.word %></td>
              <td><%= new Date(item.searchDate).toLocaleString() %></td>
              <td>
                <span class="status <%= item.resultFound ? 'status-found' : 'status-not-found' %>">
                  <%= item.resultFound ? 'Found' : 'Not Found' %>
                </span>
              </td>
            </tr>
          <% }) %>
        </tbody>
      </table>
  <% } else { %>
    <div class="empty-state">
      <p>No search history yet.</p>
    </div>
  <% } %>

  <div class="home-photo">
    <img src="/images/NelsonDictionaryImage.png" alt="Nelson Dictionary Jesus image">
    <p class="photo-caption">Thank Nelson for this wonderful Dictionary. Image generated using Google Gemini.</p>
  </div>