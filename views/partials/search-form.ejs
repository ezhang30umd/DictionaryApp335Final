<div class="search-section">
  <h2><%= typeof searchTitle !== 'undefined' ? searchTitle : 'Search for a Word' %></h2>
  <form action="/dictionary/search" method="POST" class="search-form">
    <div class="form-group">
      <label for="word">Enter a word:</label>
      <input 
        type="text" 
        id="word" 
        name="word" 
        placeholder="e.g., serendipity" 
        value="<%= typeof word !== 'undefined' ? word : '' %>"
        required
        autocomplete="off"
      >
    </div>
    <button type="submit" class="btn btn-primary">Search</button>
  </form>
</div>
