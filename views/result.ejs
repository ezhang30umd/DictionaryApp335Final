
  <div class="search-section">
    <h2>Search Again</h2>
    <form action="/dictionary/search" method="POST" class="search-form">
      <div class="form-group">
        <label for="word">Enter a word:</label>
        <input 
          type="text" 
          id="word" 
          name="word" 
          placeholder="e.g., serendipity" 
          value="<%= word || '' %>"
          required
          autocomplete="off"
        >
      </div>
      <button type="submit" class="btn">Search</button>
    </form>
  </div>

  <% if (error) { %>
    <div class="error-message">
      <p>Word not found.</p>
    </div>
  <% } %>

  <% if (data && data.length > 0) { %>
    <div class="result-section">
      <% data.forEach((entry, index) => { %>
        <div class="word-entry">
          <div class="word-header">
            <h1><%= entry.word %></h1>
            <% if (entry.phonetic) { %>
              <span class="phonetic"><%= entry.phonetic %></span>
            <% } %>
          </div>

          <% if (entry.meanings && entry.meanings.length > 0) { %>
            <% entry.meanings.forEach(meaning => { %>
              <div class="meaning">
                <h3 class="part-of-speech"><%= meaning.partOfSpeech %></h3>
                
                <% if (meaning.definitions && meaning.definitions.length > 0) { %>
                  <ol class="definitions">
                    <% meaning.definitions.forEach(def => { %>
                      <li>
                        <p class="definition"><%= def.definition %></p>
                        <% if (def.example) { %>
                          <p class="example"><em>Example: "<%= def.example %>"</em></p>
                        <% } %>
                      </li>
                    <% }) %>
                  </ol>
                <% } %>

                <% if (meaning.synonyms && meaning.synonyms.length > 0) { %>
                  <p class="synonyms-section"><strong>Synonyms:</strong> <%= meaning.synonyms.join(', ') %></p>
                <% } %>

                <% if (meaning.antonyms && meaning.antonyms.length > 0) { %>
                  <p class="antonyms-section"><strong>Antonyms:</strong> <%= meaning.antonyms.join(', ') %></p>
                <% } %>
              </div>
            <% }) %>
          <% } %>
        </div>
      <% }) %>
    </div>
  <% } %>

  <div class="home-photo">
    <img src="NelsonDictionaryImage.png" alt="Nelson Dictionary Jesus image">
    <p class="photo-caption">You cannot escape Dictionary Nelson. Image generated using Google Gemini.</p>
  </div>